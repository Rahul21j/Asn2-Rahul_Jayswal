<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>
    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Reviews</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr {{#unless this.reviews}}class="highlight{{/unless}}">
                <td>{{this.asin}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{#unless this.reviews}}N/A{{/unless}}{{#if this.reviews}}{{this.reviews}}{{/if}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
